<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/personage_list_item_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:importantForAccessibility="yes"
    android:background="@drawable/background_list"
    android:layout_marginTop="4dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/personage_list_item_image"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:scaleType="fitXY"
        android:importantForAccessibility="no"
        android:src="@drawable/teste_image"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/personage_list_item_divider"
        android:layout_width="6dp"
        android:layout_height="0dp"
        android:background="@color/color_E62429"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/personage_list_item_image"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/personage_list_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:maxLines="2"
        android:padding="4dp"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constrainedWidth="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/personage_list_item_divider"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="nome do personagem" />

    <TextView
        android:id="@+id/personage_list_item_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:padding="4dp"
        android:textColor="@color/color_BDBDBD"
        android:textSize="14sp"
        android:textStyle="italic"
        android:maxLines="4"
        android:ellipsize="end"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/personage_list_item_divider"
        app:layout_constraintTop_toBottomOf="@id/personage_list_item_name"
        app:layout_constraintVertical_bias="0.1"
        tools:text="descrição do personagem ou algum outro texto que esteja disponivel jyfudyuyduydytdtrytfyuuyfyufufyfyuffyfyufytdyfdtdytsrsyufyufytdttdytdytdufuyfdtdrdstrdsfjyfhfhdhddyttdytdydudutdytdtrdtdyfyffyufyfyufytfyt" />

</androidx.constraintlayout.widget.ConstraintLayout>