<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/personage_item_container"
    android:layout_width="200dp"
    android:layout_height="160dp"
    android:focusable="true"
    android:importantForAccessibility="yes"
    android:background="@drawable/background_carousel"
    android:layout_marginStart="8dp">

    <ImageView
        android:id="@+id/personage_item_image"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:importantForAccessibility="no"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:scaleType="fitXY"
        tools:src="@drawable/teste_image"/>

    <View
        android:id="@+id/personage_item_divider"
        android:layout_width="0dp"
        android:layout_height="6dp"
        android:background="@color/color_E62429"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/personage_item_image" />

    <TextView
        android:id="@+id/personage_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:maxLines="2"
        android:padding="4dp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/personage_item_image"
        app:layout_constraintVertical_bias="0.0"
        tools:text="nome do personagem em duas linhas" />
</androidx.constraintlayout.widget.ConstraintLayout>